<Window x:Class="SearchEngine.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SearchEngine"
        mc:Ignorable="d"
        Background="#D9D9D9"
        Title="Поиск сканера" 
        Height="350" 
        Width="500"
        ResizeMode="CanMinimize"
        Icon="/Resources/Logo.ico">

    <Grid>
        <StackPanel Cursor="">
            <TextBlock Text="Поиск сканера по фильтрам"
                       Margin="10,10,10,10"
                       Foreground="#373737"
                       FontSize="20"/>
            <Border Background="#D5D5D5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Производитель"
                           Margin="10"
                           Foreground="#373737"
                           FontSize="16"/>

                <ComboBox SelectionChanged="ComboBoxSelected"
                          Name="CreatorComboBox"
                          Grid.Column="1"
                          Margin="0,0,10,0"
                          Width="Auto"
                          HorizontalAlignment="Right"
                          FontSize="16"
                          Foreground="#373737"
                          ItemsSource="{Binding Creators}"
                          DisplayMemberPath="."/>
            </Grid>
            </Border>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Технология"
                           Margin="10"
                           Foreground="#373737"
                           FontSize="16"/>

                <ComboBox SelectionChanged="ComboBoxSelected"
                          Name="TechnologyComboBox"
                          Grid.Column="1"
                          Margin="0,0,10,0"
                          Width="Auto"
                          HorizontalAlignment="Right"
                          FontSize="16"
                          Foreground="#373737"
                          ItemsSource="{Binding Technologies}"
                          DisplayMemberPath="."/>
            </Grid>

            <Border Background="#D5D5D5">
                <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Захват цвета"
                           Margin="10"
                           Foreground="#373737"
                           FontSize="16"/>

                <ComboBox SelectionChanged="ComboBoxSelected"
                          Name="ColorCaptureComboBox"
                          Grid.Column="1"
                          Margin="0,0,10,0"
                          Width="Auto"
                          HorizontalAlignment="Right"
                          FontSize="16"
                          Foreground="#373737"
                          ItemsSource="{Binding ColorCaptureList}"
                          DisplayMemberPath="."/>
            </Grid>
            </Border>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Год выпуска"
                           Margin="10"
                           Foreground="#373737"
                           FontSize="16"/>

                <ComboBox SelectionChanged="ComboBoxSelected"
                          Name="ReleaseYearComboBox"
                          Grid.Column="1"
                          Margin="0,0,10,0"
                          Width="Auto"
                          HorizontalAlignment="Right"
                          FontSize="16"
                          Foreground="#373737"
                          ItemsSource="{Binding ReleaseYears}"
                          DisplayMemberPath="."/>
            </Grid>

            <Border Background="#D5D5D5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Стоимость"
                           Margin="10"
                           Foreground="#373737"
                           FontSize="16"/>

                <ComboBox SelectionChanged="ComboBoxSelected"
                          Name="PriceComboBox"
                          Grid.Column="1"
                          Margin="0,0,10,0"
                          Width="Auto"
                          HorizontalAlignment="Right"
                          FontSize="16"
                          Foreground="#373737"
                          ItemsSource="{Binding Prices}"
                          DisplayMemberPath="."/>
            </Grid>
            </Border>


            <Button x:Name="SearchScannerButton"
                      IsEnabled="False"
                      Content="Применить фильтр"
                      HorizontalAlignment="Center"
                      Margin="10,20,10,10"
                      Background="#373737"
                      BorderBrush="#373737"
                      Foreground="#D9D9D9"
                      Click="SearchScannerButtonClick"/>
        </StackPanel>
    </Grid>
</Window>
