<Window x:Class="SearchEngine.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Вход в систему" 
        Height="300" 
        Width="425"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/Logo.ico"
        Background="#D9D9D9">

    <Grid>
        <StackPanel>
            <Border BorderBrush="#373737"
                    BorderThickness="0,0,0,1">
            <TextBlock Text="Вход в поисковую систему 3D-сканеров"
                       Margin="15,5,15,5"
                       FontSize="20"
                       Foreground="#373737"
                       TextAlignment="Center"/>
            </Border>
            <TextBlock Text="Имя пользователя:"
                       Margin="15,5,15,5"
                       FontSize="18"
                       Foreground="#373737"
                       TextAlignment="Left"/>
            <TextBox Name="UserNameTextBox"
                     Margin="15,0,15,0"
                     Foreground="#373737"
                     FontSize="18"/>
            <TextBlock Text="Пароль:"
                       Margin="15,20,15,5"
                       FontSize="18"
                       Foreground="#373737"
                       TextAlignment="Left"/>
            <PasswordBox Name="UserPasswordBox"
                         Foreground="#373737"
                         Margin="15,0,15,0"
                         FontSize="18"/>
            <Button Name="LoginButton"
                    Margin="40,15,40,15"
                    Background="#373737"
                    BorderBrush="#373737"
                    Content="Войти"
                    Foreground="#D9D9D9"
                    Click="LoginButtonClick"/>
        </StackPanel>
    </Grid>
</Window>