<Window x:Class="SearchEngine.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SearchEngine"
        mc:Ignorable="d"
        Background="#D9D9D9"
        Title="Поиск сканера" 
        Height="305" 
        Width="500"
        Icon="/Resources/Logo.ico">

    <Window.Resources>
        <local:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
    </Window.Resources>

    <Grid>
        <StackPanel>
            <TextBlock Text="Поиск сканера по фильтрам"
                       Margin="10,10,10,10"
                       Foreground="#373737"
                       FontSize="18"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Производитель"
                           Margin="10,10,10,10"
                           Foreground="#373737"
                           FontSize="16"/>
                <ComboBox Margin="183,0,0,0" 
                          Width="150"
                          FontSize="16"
                          Foreground="#373737"
                          ItemsSource="{Binding Creators}"
                          SelectedItem="{Binding SelectedCreator, UpdateSourceTrigger=PropertyChanged}"
                          DisplayMemberPath="."/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Технология"
                           Margin="10,10,10,10"
                           Foreground="#373737"
                           FontSize="16"/>
                <ComboBox Margin="213,0,0,0" 
                          Width="150"
                          FontSize="16"
                          Foreground="#373737"
                          ItemsSource="{Binding Technologies}"
                          DisplayMemberPath="."/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Год выпуска"
                           Margin="10,10,10,10"
                           Foreground="#373737"
                           FontSize="16"/>
                <ComboBox Margin="207,0,0,0" 
                          Width="150"
                          FontSize="16"
                          Foreground="#373737"
                          ItemsSource="{Binding ReleaseYears}"
                          DisplayMemberPath="."/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Стоимость"
                           Margin="10,10,10,10"
                           Foreground="#373737"
                           FontSize="16"/>
                <ComboBox Margin="220,0,0,0" 
                          Width="150"
                          FontSize="16"
                          Foreground="#373737"
                          ItemsSource="{Binding Prices}"
                          DisplayMemberPath="."/>
            </StackPanel>
            <Button x:Name="SearchScannerButton"
                      Content="Применить фильтр"
                      HorizontalAlignment="Center"
                      Margin="10,20,10,10"
                      Background="#373737"
                      BorderBrush="#373737"
                      Foreground="#D9D9D9"
                      Click="SearchScannerButtonClick"/>
        </StackPanel>
    </Grid>
</Window>
