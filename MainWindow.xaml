<Window x:Class="SearchEngine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SearchEngine"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Background="#D9D9D9"
        Title="Главное меню" Height="500" Width="1000" Icon="/Resources/Logo.ico">
    <Grid>
        <StackPanel>
            <Border Background="#373737"
                    Height="65">
                <TextBlock Name="TitleTextBlock"
                           Text="Здравствуйте!"
                           Foreground="#D9D9D9"
                           Margin="10,10,10,10"
                           VerticalAlignment="Center"
                           FontSize="28"/>
            </Border>
            <TextBlock Text="Текущий список 3D-сканеров"
                       Margin="10,10,10,10"
                       FontSize="24"
                       VerticalAlignment="Center"
                       Foreground="#373737"
                       />
            <StackPanel Orientation="Horizontal" 
                        Margin="0,0,0,0" Height="367">
                <DataGrid Background="#D9D9D9"
                          Margin="10,10,10,10"
                          Name="ScannersTable" 
                          Width="750"
                          AutoGenerateColumns="False" Height="345">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" IsReadOnly="True" Binding="{Binding id, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Название" IsReadOnly="True" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Создатель" IsReadOnly="True" Binding="{Binding Creator, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Технология" IsReadOnly="True" Binding="{Binding Technology, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Точность" IsReadOnly="True" Binding="{Binding Accuracy, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Скорость" IsReadOnly="True" Binding="{Binding Speed, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Формат" IsReadOnly="True" Binding="{Binding Formats, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Цена" IsReadOnly="True" Binding="{Binding Price, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Год выпуска" IsReadOnly="True" Binding="{Binding ReleaseYear, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Описание" IsReadOnly="True" Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Border BorderThickness="1,0,0,0"
                        BorderBrush="#373737"
                        Width="230">
                    <Image Source="/Resources/MainMenuImage.png"
                           Margin="-2,0,-15,0" Height="370"/>
                </Border>
            </StackPanel>
        </StackPanel>  
    </Grid>
</Window>
