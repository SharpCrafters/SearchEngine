<Window x:Class="SearchEngine.AddingScannerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SearchEngine"
        mc:Ignorable="d"
        Title="Добавление сканера" 
        Height="520" 
        Width="500"
        Background="#D9D9D9">

    <Grid>
        <StackPanel Cursor="">
            <TextBlock Text="Добавление нового сканера"
                       Margin="10,10,10,10"
                       Foreground="#373737"
                       FontSize="20"/>

            <Border Background="#D5D5D5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Название"
                               Margin="10"
                               Foreground="#373737"
                               FontSize="16"/>

                    <TextBox  Name="NameTextBox"
                              Grid.Column="1"
                              Margin="0,0,10,0"
                              Width="300"
                              HorizontalAlignment="Right"
                              FontSize="16"
                              Foreground="#373737"/>
                </Grid>
            </Border>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Производитель"
                           Margin="10"
                           Foreground="#373737"
                           FontSize="16"/>

                <ComboBox Name="CreatorComboBox"
                          Grid.Column="1"
                          Margin="0,0,10,0"
                          Width="Auto"
                          HorizontalAlignment="Right"
                          FontSize="16"
                          Foreground="#373737"
                          ItemsSource="{Binding Creators}"
                          DisplayMemberPath="."/>
            </Grid>

            <Border Background="#D5D5D5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Технология"
                           Margin="10"
                           Foreground="#373737"
                           FontSize="16"/>

                    <ComboBox Name="TechnologyComboBox"
                          Grid.Column="1"
                          Margin="0,0,10,0"
                          Width="Auto"
                          HorizontalAlignment="Right"
                          FontSize="16"
                          Foreground="#373737"
                          ItemsSource="{Binding Technologies}"
                          DisplayMemberPath="."/>
                </Grid>
            </Border>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Точность"
                           Margin="10"
                           Foreground="#373737"
                           FontSize="16"/>

                <TextBox  Name="AccuracyTextBox"
                          Grid.Column="1"
                          Margin="0,0,10,0"
                          Width="150"
                          HorizontalAlignment="Right"
                          FontSize="16"
                          Foreground="#373737"/>
            </Grid>

            <Border Background="#D5D5D5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Скорость"
               Margin="10"
               Foreground="#373737"
               FontSize="16"/>

                    <TextBox  Name="SpeedTextBox"
              Grid.Column="1"
              Margin="0,0,10,0"
              Width="150"
              HorizontalAlignment="Right"
              FontSize="16"
              Foreground="#373737"/>
                </Grid>
            </Border>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Захват цвета"
                           Margin="10"
                           Foreground="#373737"
                           FontSize="16"/>

                <ComboBox Name="ColorCaptureComboBox"
                          Grid.Column="1"
                          Margin="0,0,10,0"
                          Width="Auto"
                          HorizontalAlignment="Right"
                          FontSize="16"
                          Foreground="#373737"
                          ItemsSource="{Binding ColorCaptureList}"
                          DisplayMemberPath="."/>
            </Grid>

            <Border Background="#D5D5D5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Стоимость"
                               Margin="10"
                               Foreground="#373737"
                               FontSize="16"/>

                    <TextBox  Name="PriceTextBox"
                              Grid.Column="1"
                              Margin="0,0,10,0"
                              Width="150"
                              HorizontalAlignment="Right"
                              FontSize="16"
                              Foreground="#373737"/>
                </Grid>
            </Border>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Год выпуска"
                           Margin="10"
                           Foreground="#373737"
                           FontSize="16"/>

                <TextBox  Name="ReleaseYearTextBox"
                          Grid.Column="1"
                          Margin="0,0,10,0"
                          Width="100"
                          HorizontalAlignment="Right"
                          FontSize="16"
                          Foreground="#373737"/>
            </Grid>

            <Border Background="#D5D5D5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Описание"
                               Margin="10"
                               Foreground="#373737"
                               FontSize="16"/>

                    <TextBox  Name="DescriptionTextBox"
                              Grid.Column="1"
                              Margin="0,0,10,0"
                              Width="350"
                              HorizontalAlignment="Right"
                              FontSize="16"
                              Foreground="#373737"/>
                </Grid>
            </Border>

            <Button x:Name="AddingNewScannerButton"
                      Content="Добавить"
                      Width="120"
                      HorizontalAlignment="Center"
                      Margin="10,20,10,10"
                      Background="#373737"
                      BorderBrush="#373737"
                      Foreground="#D9D9D9"
                      Click="AddingNewScannerButtonClick"/>
            
        </StackPanel>
    </Grid>
</Window>
